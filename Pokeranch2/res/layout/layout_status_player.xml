<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
    	android:id="@+id/namaPlayer"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"    		                                 
    />
    
    <TextView 
    	android:id="@+id/uangPlayer"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"    		                                 
    />
    
    <TextView 
    	android:id="@+id/waktuPlayer"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"    		                                 
    />
    
    <TextView 
    	android:id="@+id/jumlahMenangPlayer"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"    		                                 
    />
    
    <TextView 
    	android:id="@+id/jumlahKalahPlayer"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"    		                                 
    />
    
    <TextView 
    	android:id="@+id/jumlahKaburPlayer"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"    		                                 
    />

    <TextView 
        android:id="@+id/defMonPlayer"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
        />
    
    <Button 
        android:id="@+id/backFromStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:onClick="klikBackToMenu"/>
    
</LinearLayout>